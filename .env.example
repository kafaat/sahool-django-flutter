# GeoFarm Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Node.js Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=geofarm_main
DB_USER=postgres
DB_PASSWORD=geofarm_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_RESET_SECRET=your-super-secret-reset-key-change-this-in-production

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Weather API Configuration
WEATHER_API_KEY=your-openweather-api-key

# OpenAI Configuration (for GeoChat)
OPENAI_API_KEY=your-openai-api-key

# AI Model Service Configuration
AI_MODEL_URL=http://localhost:5000

# InfluxDB Configuration
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=geofarm
INFLUXDB_BUCKET=sensor_data

# MQTT Configuration
MQTT_HOST=mqtt.eclipseprojects.io
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/geofarm.log

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
FCM_SERVER_KEY=your-fcm-server-key

# GeoChat Configuration
GEochat_MAX_FILE_SIZE=5242880
GEochat_SUPPORTED_FORMATS=image/jpeg,image/png,image/gif

# Development Configuration
DEBUG_MODE=false
ENABLE_SWAGGER=true
SWAGGER_HOST=localhost:3000