{
  "name": "geofarm-platform",
  "version": "2.0.0",
  "description": "Comprehensive agricultural intelligence platform with AI, IoT, and satellite imagery integration",
  "main": "api-gateway.js",
  "scripts": {
    "start": "node api-gateway.js",
    "dev": "nodemon api-gateway.js",
    "start:all": "concurrently \"npm run start:gateway\" \"npm run start:services\"",
    "start:gateway": "node api-gateway.js",
    "start:user-service": "node user-service.js",
    "start:notification-service": "node notification-service.js",
    "start:weather-service": "node weather-service.js",
    "start:crop-detection-service": "node crop-detection-service.js",
    "start:recommendation-service": "node recommendation-service.js",
    "start:farm-service": "node farm-service.js",
    "start:services": "concurrently \"npm run start:user-service\" \"npm run start:notification-service\" \"npm run start:weather-service\" \"npm run start:crop-detection-service\" \"npm run start:recommendation-service\" \"npm run start:farm-service\"",
    "test": "jest",
    "lint": "eslint *.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "agriculture",
    "farming",
    "IoT",
    "AI",
    "satellite-imagery",
    "crop-monitoring",
    "precision-agriculture"
  ],
  "author": "GeoFarm Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.5.0",
    "winston": "^3.10.0",
    "nodemailer": "^6.9.4",
    "expo-server-sdk": "^3.7.0",
    "sharp": "^0.32.5",
    "node-cron": "^3.0.2",
    "http-proxy-middleware": "^2.0.6",
    "express-rate-limit": "^6.10.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1",
    "mqtt": "^5.0.3",
    "influx": "^5.6.3",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1",
    "jest": "^29.6.4",
    "eslint": "^8.47.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}